<launch>

	<arg name="rosbag_enabled" default="false"/>
	<arg name="rosbag_prefix_url" default="/tmp"/>

	<arg name="routing_enabled" default="true"/>
	<arg name="map_enabled" default="true"/>
	<arg name="navigate_enabled" default="true"/>

	<arg name="route_service" default="route_service"/>
	<arg name="crop_service" default="crop_service"/>
	<arg name="load_service" default="load_service"/>

	<arg name="coordinator_mission_action_server" default="coordinator_mission_action_server"/>

	<node name="mission_coordinator_manager" pkg="nautonomous_mission_coordinator" type="mission_coordinator_node" output="screen">
		<param name="routing_enabled" value="$(arg routing_enabled)"/>
		<param name="map_enabled" value="$(arg map_enabled)"/>
		<param name="navigate_enabled" value="$(arg navigate_enabled)"/>
		
		<remap from="route_service" to="$(arg route_service)"/>
		<remap from="crop_service" to="$(arg crop_service)"/>
		<remap from="load_service" to="$(arg load_service)"/>
		
		<remap from="coordinator_mission_action_server" to="$(arg coordinator_mission_action_server)"/>
	</node>

</launch>
